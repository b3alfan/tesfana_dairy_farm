<div class="tesfana-dashboard-wrap">
  <div class="tdf-header">
    <div>
      <h1>üêÑ {{ 'Tesfana Dairy Dashboard'|t }}</h1>
      <p class="subtitle">{{ 'Operational overview'|t }}</p>
    </div>
    <div class="tdf-header-actions">
      {% if add_cow_url %}<a href="{{ add_cow_url }}" class="tdf-btn">{{ 'Add Cow'|t }}</a>{% endif %}
      {% if log_milk_url %}<a href="{{ log_milk_url }}" class="tdf-btn">{{ 'Add Milk'|t }}</a>{% endif %}
      {% if task_add_url %}<a href="{{ task_add_url }}" class="tdf-btn">{{ 'Add Task'|t }}</a>{% endif %}
      {% if bcs_url %}<a href="{{ bcs_url }}" class="tdf-btn">{{ 'Record BCS'|t }}</a>{% endif %}
      {% if milk_tests_url %}<a href="{{ milk_tests_url }}" class="tdf-btn">{{ 'Milk Quality'|t }}</a>{% endif %}
      <a href="{{ milk_csv_url ?? path('tesfana_dairy_farm.milk_log_export_csv') }}" class="tdf-btn tdf-btn-secondary">{{ 'Milk CSV'|t }}</a>
      <a href="{{ quickbooks_csv_url ?? path('tesfana_dairy_farm.quickbooks_export_csv') }}" class="tdf-btn tdf-btn-secondary">{{ 'QuickBooks CSV'|t }}</a>
      {% if settings_url %}<a href="{{ settings_url }}" class="tdf-btn tdf-btn-secondary">{{ 'Settings'|t }}</a>{% endif %}
      <span data-form-queue-badge class="tdf-badge">0</span>
    </div>
  </div>

  <div class="tdf-kpis">
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Milk Today'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.milk_today|default(0) }} <small>L</small></div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Milk Yesterday'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.milk_yesterday|default(0) }} <small>L</small></div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Total Milk Logs'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.total_milk_logs|default(0) }}</div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Revenue Today'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.revenue_today|default(0) }} <small>{{ kpis.currency|default('') }}</small></div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Revenue (30 days)'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.revenue_30d|default(0) }} <small>{{ kpis.currency|default('') }}</small></div>
    </div>

    {# Extra KPIs #}
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Milk (7 days total)'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.milk_7d_total|default(0) }} <small>L</small></div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Milk (7 days avg)'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.milk_7d_avg|default(0) }} <small>L</small></div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Cows Milked (7 days)'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.cows_7d|default(0) }}</div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Revenue MTD'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.revenue_mtd|default(0) }} <small>{{ kpis.currency|default('') }}</small></div>
    </div>

    {# Task KPIs #}
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Tasks Today'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.tasks_today|default(0) }}</div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Tasks (next 7 days)'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.tasks_7d|default(0) }}</div>
    </div>
    <div class="tdf-kpi">
      <div class="tdf-kpi-title">{{ 'Overdue Tasks'|t }}</div>
      <div class="tdf-kpi-value">{{ kpis.tasks_overdue|default(0) }}</div>
    </div>
  </div>

  <div class="tdf-grid">
    <div class="tdf-card">
      <div class="tdf-card-title">{{ 'Milk Output (last 30 days)'|t }}</div>
      <div id="milk-output-chart" class="chart-box"></div>
      <noscript><div class="chart-fallback">{{ 'Enable JavaScript to view chart.'|t }}</div></noscript>
    </div>

    <div class="tdf-card">
      <div class="tdf-card-title">{{ 'Task Calendar'|t }}</div>
      <div id="task-calendar" class="calendar-box"></div>
      <noscript><div class="chart-fallback">{{ 'Enable JavaScript to view calendar.'|t }}</div></noscript>
    </div>
  </div>

  {% if tasks %}
    <div class="tdf-card">
      <div class="tdf-card-title">{{ 'Upcoming Tasks'|t }}</div>
      <ul class="tdf-list">
        {% for t in tasks %}
          <li>
            <strong>{{ t.title }}</strong>
            <small style="opacity:.7">‚Äî {{ t.category }} ¬∑ {{ t.priority }} ¬∑ {{ t.date }}</small>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  {% if notices %}
    <div class="tdf-card">
      <div class="tdf-card-title">{{ 'Notices'|t }}</div>
      <ul class="tdf-list">
        {% for n in notices %}
          <li>{{ n }}</li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
</div>
