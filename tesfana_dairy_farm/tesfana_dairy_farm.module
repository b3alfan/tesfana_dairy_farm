/**
 * Implements hook_page_attachments().
 *
 * Attach the service worker registrar to every page.
 */
function tesfana_dairy_farm_page_attachments(array &$attachments): void {
  $attachments['#attached']['library'][] = 'tesfana_dairy_farm/sw_register';
}

